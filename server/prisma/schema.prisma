// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite" 
  url      = "file:./data.db"
}

model Army {
  id          Int     @id @default(autoincrement())
  user        String
  name        String
  faction     String
  game        String
  points      Int
  units       String
}

model Terrain {
  id          Int     @id @default(autoincrement())
  name        String
  type        String
  houses      String
  trees       String
  waters      String
}

model Weapon {
  id          Int     @id @default(autoincrement())
  name        String
  AT          Int
  FP          Int
  specials    String
  firerate    Int
  range       Int @default(20)
  game        String
}

model Team {
  id          Int     @id @default(autoincrement())
  name        String
  def         Int
  speed       Int
  mat         Int
  rat         Int
  reactions   Int
  motivation  Int
  skill       Int
  save        Int
  armourFront Int
  armourSide  Int
  armourTop   Int
  type        String
  faction     String
  imgSide     String
  imgTop      String
  effects     String
  specials    String
  desc        String
  order       String
  weapons     String
  unit        String
  transport   Int
  transporting String
  nickname    String
  target      String
  cross       Int
  points      Int
  height      Int
  width       Int
  game        String
}
